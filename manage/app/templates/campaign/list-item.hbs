{{#link-to
  "campaign.edit" item.id
  class="list-group-item list-group-item-action flex-column align-items-start"
}}
  <div class="d-flex w-100 justify-content-between">
    <h4 class="mb-1">{{item.fullName}}</h4>
    {{#if item.updatedAt}}
      <small>{{entypo-icon "clock "}} Updated {{moment-format item.updatedAt "MMM Do, YYYY h:mm a"}}</small>
    {{/if}}
  </div>
  <div class="my-2">
    <p class="mb-0">Customer: {{item.customer.name}}</p>
    {{#if item.salesRep.id}}
      <p class="mb-0 mt-1">Sales Rep: {{item.salesRep.givenName}} {{item.salesRep.familyName}}</p>
    {{/if}}
  </div>

  <small>ID: {{item.id}}</small>
{{/link-to}}
