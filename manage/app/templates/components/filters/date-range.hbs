<label>{{label}}</label>
<fieldset disabled={{disabled}}>
  {{#power-calendar-range
    center=center
    selected=range
    onCenterChange=(action (mut center) value="moment")
    onSelect=(action "emitChange" value="moment")
    as |calendar|
  }}
    {{calendar.nav}}
    {{calendar.days}}
  {{/power-calendar-range}}
  {{#if selectedLabel}}
    <small class="mt-2 text-muted">{{selectedLabel}}</small>
  {{/if}}
  {{#if canClear}}
    <button class="btn btn-secondary btn-sm mt-2" disabled={{noDatesSelected}} {{action "clear"}}>
      {{entypo-icon name="cross"}} Clear
    </button>
  {{/if}}
</fieldset>
